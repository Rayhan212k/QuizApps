<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/qbg2"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".HistoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/backResulticonID"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:gravity="center"
            android:background="@drawable/backbuttonlogo3"
            android:layout_marginLeft="4sp"
            android:textStyle="bold"
            android:typeface="serif"
            android:textColor="#399FF1"
            android:textSize="30sp"/>

        <ImageView
            android:layout_width="310sp"
            android:layout_height="120sp"
            android:src="@drawable/quizlogo2"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Result Records"
        android:background="#CCE6BD"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginBottom="10sp"
        android:textColor="#0027FF"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg3"
        android:scaleType="centerCrop"
        android:alpha="0.5"/>


        <!-- Use a RecyclerView or ListView for better handling of dynamic data -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/history_scrollview_description"
            android:layout_margin="5sp">

            <LinearLayout
                android:id="@+id/historyContainerID"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="8sp"
                android:orientation="vertical">
                <!-- Dynamically add TextViews for each history entry -->
            </LinearLayout>
        </ScrollView>


    </androidx.cardview.widget.CardView>


</LinearLayout>
