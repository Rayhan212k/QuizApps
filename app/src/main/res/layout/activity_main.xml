<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/background3"
    android:layout_margin="0sp"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="350sp"
        android:layout_height="150sp"
        android:src="@drawable/quizlogo2"/>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30sp"
        app:cardCornerRadius="40dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="400sp"
            android:src="@drawable/loginbackground1"
            android:scaleType="centerCrop"
            android:alpha="0.5"/>

        <LinearLayout
            android:layout_width="330sp"
            android:layout_height="350sp"
            android:layout_margin="10sp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="Login Now"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="25sp"
                android:typeface="serif"
                android:textColor="#F44336"
                android:textSize="35sp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5sp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#E3DDDD"
                app:cardElevation="1dp"
                app:cardUseCompatPadding="true"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0sp"
                        android:layout_weight=".4"
                        android:layout_gravity="center"
                        android:layout_height="30sp"
                        android:layout_marginLeft="5sp"
                        android:src="@drawable/userlogo1"/>

                    <EditText
                        android:id="@+id/GmailAddressID"
                        android:layout_width="0sp"
                        android:layout_height="48dp"
                        android:layout_weight="1.6"
                        android:hint="   Enter Gmail/Phone"
                        android:background="#E3DDDD"
                        android:textSize="25sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5sp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#E3DDDD"
                app:cardElevation="1dp"
                app:cardUseCompatPadding="true"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0sp"
                        android:layout_weight=".4"
                        android:layout_gravity="center"
                        android:layout_height="30sp"
                        android:layout_marginLeft="5sp"
                        android:src="@drawable/locklogo1"/>

                    <EditText
                        android:id="@+id/PasswordID"
                        android:layout_width="0sp"
                        android:layout_height="48dp"
                        android:layout_weight="1.6"
                        android:hint="   Enter Password"
                        android:textSize="27sp"/>
                </LinearLayout>
             </androidx.cardview.widget.CardView>



    <Button
                android:id="@+id/LoginButtonFunctionID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40sp"
                android:onClick="LoginButtonFunction"
                android:text="LOGIN"
                android:textSize="40sp"
                android:typeface="normal" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="1.2"
                    android:layout_height="wrap_content"
                    android:text="Not yet Purchased?"
                    android:layout_marginTop="5sp"
                    android:layout_marginLeft="35sp"
                    android:typeface="normal"
                    android:textColor="#170A09"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="0sp"
                    android:layout_weight=".8"
                    android:layout_height="wrap_content"
                    android:text=" Purchase"
                    android:layout_marginTop="5sp"
                    android:typeface="normal"
                    android:textColor="#1089EA"
                    android:textSize="20sp"
                    android:onClick="openSignUpActivity"
                    android:clickable="true"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create by Md. Rayhan"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginLeft="180sp"
        android:layout_marginRight="75sp"
        android:layout_marginTop="70sp"
        android:typeface="normal"
        android:textColor="#E91E63"
        android:textSize="13sp"/>
</LinearLayout>