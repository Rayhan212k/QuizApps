<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/rlogo1"
    android:layout_margin="0sp"
    tools:context=".Result">

    <ImageView
        android:layout_width="330sp"
        android:layout_height="120sp"
        android:src="@drawable/quizlogo2"/>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30sp"
        app:cardCornerRadius="40dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="323sp"
            android:src="@drawable/resultbg1"
            android:scaleType="centerCrop"
            android:alpha="0.5"/>

        <LinearLayout
            android:layout_width="330sp"
            android:layout_height="300sp"
            android:layout_margin="10sp"
            android:layout_gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/NameID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:gravity="center"
                android:hint="Welcome! Md. Rayhan"
                android:textColor="#435AEF"
                android:textSize="33sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <TextView
                android:id="@+id/IdID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="ID: 211-15-14666"
                android:textStyle="bold"
                android:typeface="normal"
                android:layout_marginBottom="20sp"
                android:layout_marginTop="15sp"
                android:textColor="#8859DA"
                android:textSize="33sp"/>


            <TextView
                android:id="@+id/TopicID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Topic Name"
                android:textStyle="bold"
                android:typeface="serif"
                android:layout_marginBottom="20sp"
                android:layout_marginTop="10sp"
                android:textColor="#399FF1"
                android:textSize="27sp"/>

            <TextView
                android:id="@+id/PointID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0sp"
                android:gravity="center"
                android:hint="Point: 0 out of 10"
                android:textStyle="bold"
                android:typeface="normal"
                android:textColor="#CF40A6"
                android:textSize="33sp"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go to home page click here"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="15sp"
        android:layout_marginTop="20sp"
        android:typeface="normal"
        android:textStyle="bold"
        android:textColor="#27570D"
        android:textSize="20sp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="HomeButtonFunction"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:text="Go"
        android:textStyle="bold"
        android:textSize="35sp"
        android:typeface="serif"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create by Md. Rayhan"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginLeft="180sp"
        android:layout_marginRight="75sp"
        android:layout_marginTop="15sp"
        android:typeface="normal"
        android:textColor="#3F51B5"
        android:textSize="13sp"/>
</LinearLayout>