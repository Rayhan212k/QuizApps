<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/questionbg1"
    android:layout_margin="0sp"
    tools:context=".Topic1_Q1">


    <ImageView
        android:layout_width="330sp"
        android:layout_height="120sp"
        android:src="@drawable/quizlogo2"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1.6"
            android:gravity="center"
            android:text="Data Mining"
            android:textStyle="bold"
            android:typeface="serif"
            android:layout_marginBottom="20sp"
            android:layout_marginTop="10sp"
            android:textColor="#399FF1"
            android:textSize="30sp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="0sp"
            android:layout_weight=".4"
            android:layout_height="wrap_content"
            android:layout_marginRight="20sp"
            app:cardCornerRadius="120dp">

            <TextView
                android:id="@+id/timerTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:text="15 s"
                android:textColor="#F44336"
                android:textSize="30sp"
                android:textStyle="bold"
                android:typeface="serif" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        app:cardCornerRadius="40dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100sp"
            android:alpha="0.5"
            android:scaleType="centerCrop"
            android:src="@drawable/qbg2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q-1: What is the primary goal of data mining?"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="10sp"
            android:typeface="normal"
            android:textColor="#27570D"
            android:textSize="30sp"/>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        app:cardCornerRadius="40dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="234sp"
            android:alpha="0.5"
            android:scaleType="centerCrop"
            android:src="@drawable/qbg2" />

        <RadioGroup
            android:id="@+id/Topic1Q1ID"
            android:layout_margin="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/Topic1Q1aID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A) Data visualization."
                android:textSize="22sp"/>
            <RadioButton
                android:id="@+id/Topic1Q1bID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B) Data storage."
                android:textSize="22sp"/>
            <RadioButton
                android:id="@+id/Topic1Q1cID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C) Knowledge discovery."
                android:textSize="22sp"/>
            <RadioButton
                android:id="@+id/Topic1Qd1dID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D) Data cleansing."
                android:textSize="22sp"/>
        </RadioGroup>
    </androidx.cardview.widget.CardView>



    <Button
        android:id="@+id/Topic1Q1NextButtonFunctionID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="Topic1Q1NextButtonFunction"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:text="Next"
        android:textStyle="bold"
        android:textSize="40sp"
        android:typeface="serif"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create by Md. Rayhan"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginLeft="180sp"
        android:layout_marginRight="75sp"
        android:layout_marginTop="10sp"
        android:typeface="normal"
        android:textColor="#3F51B5"
        android:textSize="13sp"/>
</LinearLayout>