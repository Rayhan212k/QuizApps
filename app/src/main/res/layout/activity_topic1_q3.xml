<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/questionbg1"
    android:layout_margin="0sp"
    tools:context=".Topic1_Q3">

    <ImageView
        android:layout_width="330sp"
        android:layout_height="120sp"
        android:src="@drawable/quizlogo2"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1.6"
            android:gravity="center"
            android:text="Data Mining"
            android:textStyle="bold"
            android:typeface="serif"
            android:layout_marginBottom="20sp"
            android:layout_marginTop="10sp"
            android:textColor="#399FF1"
            android:textSize="30sp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="0sp"
            android:layout_weight=".4"
            android:layout_height="wrap_content"
            android:layout_marginRight="20sp"
            app:cardCornerRadius="120dp">

            <TextView
                android:id="@+id/timerTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:text="15 s"
                android:textColor="#F44336"
                android:textSize="30sp"
                android:textStyle="bold"
                android:typeface="serif" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        app:cardCornerRadius="40dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="132sp"
            android:alpha="0.5"
            android:scaleType="centerCrop"
            android:src="@drawable/qbg2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:gravity="center"
            android:text="Q-3: What's the common clustering algorithm in data mining?"
            android:textColor="#27570D"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="normal" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        app:cardCornerRadius="40dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="232sp"
            android:alpha="0.5"
            android:scaleType="centerCrop"
            android:src="@drawable/qbg2" />

        <RadioGroup
            android:id="@+id/Topic1Q3ID"
            android:layout_margin="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/Topic1Q3aID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A) Decision tree."
                android:textSize="20sp"/>
            <RadioButton
                android:id="@+id/Topic1Q3bID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B) k-Nearest Neighbors (k-NN)."
                android:textSize="20sp"/>
            <RadioButton
                android:id="@+id/Topic1Q3cID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C) K-means."
                android:textSize="20sp"/>
            <RadioButton
                android:id="@+id/Topic1Q3dID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D) Support Vector Machine (SVM)."
                android:textSize="18sp"/>
        </RadioGroup>

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/Topic1Q3NextButtonFunctionID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="Topic1Q3NextButtonFunction"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:text="Next"
        android:textStyle="bold"
        android:textSize="35sp"
        android:typeface="serif"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create by Md. Rayhan"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginLeft="180sp"
        android:layout_marginRight="75sp"
        android:layout_marginTop="10sp"
        android:typeface="normal"
        android:textColor="#3F51B5"
        android:textSize="13sp"/>

</LinearLayout>