<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg1"
    android:layout_margin="0sp"
    tools:context=".Topics">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/backHomeiconID"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:gravity="center"
            android:background="@drawable/backbuttonlogo3"
            android:layout_marginLeft="4sp"
            android:textStyle="bold"
            android:typeface="serif"
            android:textColor="#399FF1"
            android:textSize="30sp"/>

        <ImageView
            android:layout_width="330sp"
            android:layout_height="120sp"
            android:src="@drawable/quizlogo2"/>

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30sp"
        app:cardCornerRadius="40dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="360sp"
            android:alpha="0.5"
            android:scaleType="centerCrop"
            android:src="@drawable/bg3" />

        <LinearLayout
            android:layout_width="330sp"
            android:layout_height="340sp"
            android:layout_margin="10sp"
            android:layout_gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/TopicUserNameID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:gravity="center"
                android:hint="Hi! Rayhan"
                android:textColor="#435AEF"
                android:textSize="30sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5sp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#E3DDDD"
                app:cardElevation="1dp"
                app:cardUseCompatPadding="true"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/TopicUserIdID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="ID: 211-15-14666"
                    android:textStyle="bold"
                    android:typeface="normal"
                    android:layout_marginBottom="20sp"
                    android:layout_marginTop="15sp"
                    android:textColor="#CF40A6"
                    android:textSize="28sp"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Your Quiz Topic"
                android:textStyle="bold"
                android:typeface="serif"
                android:layout_marginBottom="20sp"
                android:layout_marginTop="10sp"
                android:textColor="#399FF1"
                android:textSize="25sp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5sp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#E3DDDD"
                app:cardElevation="1dp"
                app:cardUseCompatPadding="true"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/TopicNameID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="Topic Name"
                    android:textStyle="bold"
                    android:typeface="normal"
                    android:layout_marginBottom="20sp"
                    android:layout_marginTop="15sp"
                    android:textColor="#CF40A6"
                    android:textSize="28sp"/>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Your time is 15 second per Question"
        android:layout_marginLeft="10sp"
        android:layout_marginBottom="2sp"
        android:typeface="normal"
        android:textColor="#CF40A6"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="You will be answer 5 question."
        android:layout_marginLeft="10sp"
        android:typeface="normal"
        android:textColor="#CF40A6"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/TopicStartButtonFunctionID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="TopicStartButtonFunction"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:text="Start"
        android:textStyle="bold"
        android:textSize="35sp"
        android:typeface="serif"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create by Md. Rayhan"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginLeft="180sp"
        android:layout_marginRight="75sp"
        android:layout_marginTop="10sp"
        android:typeface="normal"
        android:textColor="#3F51B5"
        android:textSize="13sp"/>
</LinearLayout>